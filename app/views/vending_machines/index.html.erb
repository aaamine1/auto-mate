<div class="">
  <div class="index-view d-flex">
    <div style=" margin-top: 30px" >
      <ul>
          <% @vending_machines.each do |vending_machine|%>
          <div class="vm-listing" style="padding: 10px">
              <li style="margin-bottom: 20px">
              <%= link_to vending_machine.name, vending_machine_path(vending_machine) %>
              <%= link_to "Book this", vending_machine_path(vending_machine), class: "btn-black", style: "margin-bottom: 10px" %>
              </li>
              <%= vending_machine.address%>
              <%= vending_machine.description%>
              <%# <%= link_to "manage items", vending_machine_items_path(@vending_machine) %>

          </div>
          <%end %>
      </ul>
    </div>
    <div style="width: 100%; height: 600px;" id="map"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
