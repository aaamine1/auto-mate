<div class="content">
  <div class="stats-db">
    <div class="stat-card">
      <p><i class="fa fa-user-circle" aria-hidden="true"></i> Current Role </p>
      <h1> Vendor </h1>
      <p><i class="fa fa-sort-asc" aria-hidden="true"></i> 3 months</p>
    </div>

    <div class="stat-card">
      <p><i class="fa fa-map-marker" aria-hidden="true"></i> Number of Vending Machines</p>
      <h1>#<%= @vm_number %> </h1>
      <p></p>
    </div>

    <div class="stat-card">
      <p><i class="fa fa-line-chart" aria-hidden="true"></i> Total Income </p>
      <h1>$10,000 </h1>
      <p>125  <i class="fa fa-sort-asc" aria-hidden="true"></i> This month</p>
    </div>
    <div class="stat-card">
      <p><i class="fa fa-line-chart" aria-hidden="true"></i> Total Income </p>
      <h1>$10,000</h1>
      <p>125  <i class="fa fa-sort-asc" aria-hidden="true"></i> This month</p>
    </div>

  </div>
</div>



  <div class="analytics-db-v">
    <div class="charts">
      <h2 style="text-align:center">Item categories</h2>
      <%= pie_chart Product.group(:category).count %>
    </div>
    <div class="charts">
      <h2 style="text-align:center"> Items by price</h2>
      <%= pie_chart Item.group(:list_price).count %>
    </div>
    <div class="charts">
      <h2 style="text-align:center"> Items by price</h2>
      <%= pie_chart Item.group(:list_price).count %>
    </div>
  </div>







<div class="db-content" style="margin-top: 50px">
  <div id="my-vm-db" style="" >
    <h1 class="ml-3 db-header" style="text-align:center; font-weight:bolder"> <i class="fa fa-map-marker" aria-hidden="true" style="color:#f8837b"></i> My Auto-Mates  </h1>

        <% @vending_machines.each do |vending_machine|%>
            <div class="card-product">
              <img src="https://cdn-icons-png.flaticon.com/512/821/821356.png"/>
              <div class="db-card-content">
                <div class="card-product-infos">
                  <h2> <%= link_to vending_machine.name, vending_machine_path(vending_machine) %></h2>
                  <p> <strong><%= vending_machine.address%> |</strong> <%= vending_machine.description%> </p>
                </div>

                <div class="crud-btns-db">
                  <%= link_to edit_vending_machine_path(vending_machine), class: "btn mb-2" do %>
                  <i class="fa fa-pencil" aria-hidden="true"></i>
                  <% end %>
                  <%= link_to vending_machine_path(vending_machine), method: :delete, class: "btn", data: { confirm: 'Are you sure?' } do %>
                    <i class="fa fa-trash" aria-hidden="true"></i>
                  <% end %>
                </div>
              </div>

            </div>
        <%end %>
        <div class="db-v-btns d-flex justify-content-center">
          <%= link_to  new_vending_machine_path, class:"btn-black", id: "new-vm-btn" do %>
            <i class="fa fa-plus-circle" aria-hidden="true"></i> New Auto-Mate
          <% end %>
        </div>
  </div>
  <div class="list-booking">
          <h1 class="db-header ml-3" style="text-align:center; font-weight:bolder"> <i class="fa fa-bookmark" aria-hidden="true" style="color:#f8837b"></i> Ongoing Refills</h1>

            <% @bookings.each do |booking| %>
                  <div class="booking-card text" style="text-align:center">
                      <h2> <strong><%= booking.vending_machine.name %></strong> </h2>
                      <p> Address: <strong> <%= booking.vending_machine.address %> </strong> </p>
                      <p> ‚è≥Deadline: <%= Time.now + rand(15..120).minutes %></p>
                      <br>
                  </div>
            <% end %>
        </div>
    </div>
  </div>
</div>
