      <%# <p>125  <i class="fa fa-sort-asc" aria-hidden="true"></i> This month</p> %>
    </div>

  </div>
</div>


<div id="my-vm-db" style=" margin-top: 30px" >
 <h1 class="ml-3"> Auto-Mates running low in stock..</h1>

        <% @vending_machines.each do |vending_machine|%>
            <div class="card-product m-3">

              <img src="https://cdn-icons-png.flaticon.com/512/821/821356.png"/>
              <div class="db-card-content">
                <div class="card-product-infos">
                  <h2> <%= link_to vending_machine.name, vending_machine_path(vending_machine) %></h2>
                  <p> <strong><%= vending_machine.address%> |</strong> <%= vending_machine.description%> </p>
                </div>
              </div>

              <%= simple_form_for [vending_machine, @booking] do |f| %>
                      <%= f.submit "Book for refill", class: 'btn' %>
                    <% end %>

              </div>

        <%end %>
</div>



<h2>Ongoing booking</h2>
    <ul>
    <%  %>
    <% @my_bookings = @bookings.each do |booking| %>
            <p>
            <strong><%= booking.vending_machine.name %> </strong>
            <strong><%= booking.vending_machine.address %> </strong>
            From: <%= booking.created_at %>
            To: <%= booking.created_at %>
            <%= link_to 'Mark booking as complete', accept_booking_path(booking), method: :patch, class: 'btn'  %>
            <%= link_to 'Mark booking as declined', decline_booking_path(booking), method: :patch, class: 'btn'  %>
            </p>
            <br>

    <% end %>
    </ul>
