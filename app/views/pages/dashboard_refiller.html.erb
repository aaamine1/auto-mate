  <div class="db-intro">
    <h1 class="mb-3"> <i class="fa fa-tachometer" aria-hidden="true"></i> My Dashboard</h1>

  </div>
</div>


<div class="content">
  <div class="stats-db">
    <div class="stat-card">
      <p><i class="fa fa-line-chart" aria-hidden="true"></i> You profile  </p>
      <h1>Refiller</h1>
    </div>

    <div class="stat-card">
      <p><i class="fa fa-map-marker" aria-hidden="true"></i> Total completed bookings</p>
      <h1>#<%= Booking.count %> </h1>
